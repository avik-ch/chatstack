# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key"

# Cloudinary Configuration (if using image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_ENVIRONMENT_VARIABLE="CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name"

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,https://your-frontend-domain.vercel.app"
